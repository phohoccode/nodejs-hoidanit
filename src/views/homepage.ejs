<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th,
    td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    tr:hover {
      background-color: #ccc;
    }
  </style>
  <body>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/create">Create user</a></li>
    </ul>
    <table>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>City</th>
        <th>Actions</th>
      </tr>
      <% listUser.forEach(function(user) { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.city %></td>
        <td>
            <a href="/update/<%= user.id %>">Edit</a>
            <form action="/delete-user/<%= user.id %>" method="post"        onsubmit="return confirm('Bạn chắc chắn muốn xoá user này?');">
                <button>Delete</button>
            </form>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
